<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.nlog-project.org/schemas/NLog.xsd NLog.xsd"
      autoReload="true"
      throwExceptions="false"
      internalLogLevel="Off" internalLogFile="C:\log\matrix\firewall\nlog-internal.log">
  <targets>
    <target xsi:type="File" name="File" archiveFileName="C:\log\matrix\firewall\matrix.firewall.web.{###}.log" archiveNumbering="DateAndSequence" fileName="C:\log\matrix\firewall\matrix.firewall.web.log" layout="${longdate} | ${logger} | ${uppercase:${level}} | ${message}" />
    <target xsi:type="NLogViewer" name="Sentinel" layout="${longdate} | ${logger} | ${uppercase:${level}} | ${message}" address="udp://127.0.0.1:9999" />
  </targets>
  <rules>
    <logger name="*" minlevel="Trace" writeTo="File" />
    <!--<logger name="*" minlevel="Trace" writeTo="Sentinel" />-->
  </rules>
</nlog>